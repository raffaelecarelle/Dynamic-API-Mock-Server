# Application settings
APP_NAME="Dynamic API Mock Server"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8081

# Database settings
DB_DRIVER=sqlite
DB_HOST=localhost
DB_DATABASE=/app/storage/database.sqlite
DB_USERNAME=
DB_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_ERRORS=true
LOG_ERROR_DETAILS=true
DISPLAY_ERROR_DETAILS=true

# CORS
CORS_ORIGIN=*

# Mock settings
DEFAULT_DELAY=0
MAX_DELAY=5000
RATE_LIMIT=100